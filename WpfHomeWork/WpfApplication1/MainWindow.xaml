<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Student Form" Height="304" Width="347" Name="FMlogin">
    <Grid Loaded="Grid_Loaded">
        <Button x:Name="buttonSignIn" Content="Sign In" HorizontalAlignment="Left" Height="32" Margin="125,199,0,0" VerticalAlignment="Top" Width="102"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="34" Margin="125,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102" TextChanged="txtUserName_TextChanged"/>
        <Label x:Name="label" Content="User Name" HorizontalAlignment="Left" Height="28" Margin="12,65,0,0" VerticalAlignment="Top" Width="92"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Height="34" Margin="12,126,0,0" VerticalAlignment="Top" Width="92"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="34" Margin="125,126,0,0" VerticalAlignment="Top" Width="102"/>

    </Grid>
</Window>
